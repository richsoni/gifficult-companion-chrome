{
  "name": "Gifficult-Companion",
  "version": "0.1",
  "description": "Page Action to view current subreddit on gifficult",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action":
  {
    "default_icon" : "assets/icon-19.png",
    "default_title" : "Gifficult!",
    "default_popup" : "html/popup.html"
  },
  "permissions": [
    "declarativeContent",
    "tabs"
  ],
  "icons" : {
    "48" : "assets/icon-48.png",
    "128" : "assets/icon-128.png"
  },
  "manifest_version": 2
}
